<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/imageView_myorder"
        android:layout_width="728dp"
        android:layout_height="237dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/myorder_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/textView_myorder_name"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Titulli i produktit"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <TextView
        android:id="@+id/textView_myorder_metric"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:text="250ml"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <TextView
        android:id="@+id/textView_myorder_price"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="168dp"
        android:text="cmimi i produktit"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView_myorder"
        android:layout_width="185dp"
        android:layout_height="141dp"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="512dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_myorder"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton_myorder_info"
        android:layout_width="82dp"
        android:layout_height="76dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_myorder"
        app:layout_constraintEnd_toEndOf="@+id/imageView_myorder"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:srcCompat="@drawable/ic_info" />

</android.support.constraint.ConstraintLayout>