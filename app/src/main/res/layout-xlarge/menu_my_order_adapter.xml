<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/imageView_myorder"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />


    <TextView
        android:id="@+id/textView_myorder_name"
        android:layout_width="406dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="11dp"
        android:text="Titulli i produktit"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <TextView

        android:id="@+id/textView_myorder_metric"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:text="250ml"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_myorder_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_myorder_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_myorder_name" />

    <TextView
        android:id="@+id/textView_myorder_price"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="11dp"
        android:text="cmimi i produktit"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_myorder_metric"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_myorder_metric"
        app:layout_constraintTop_toBottomOf="@+id/textView_myorder_metric" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView_myorder"
        android:layout_width="185dp"
        android:layout_height="141dp"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="508dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_myorder"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton_myorder_info"
        android:layout_width="82dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_myorder_price"
        app:layout_constraintStart_toEndOf="@+id/textView_myorder_price"
        app:layout_constraintTop_toTopOf="@+id/textView_myorder_price"
        app:srcCompat="@drawable/ic_info" />


    <ImageView
        android:id="@+id/imageButton_delete"
        android:layout_width="87dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_myorder"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder"
        app:srcCompat="@mipmap/ic_recycle" />

</android.support.constraint.ConstraintLayout>