<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ordinefacile.root.ordinefacile.ui.order_history.OrderHistoryActivity"
    tools:showIn="@layout/activity_order_history">


    <ImageView
        android:id="@+id/imageView_myorder"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/myorder_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_myorder_name"
        android:layout_width="175dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Titulli i produktit"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <TextView
        android:id="@+id/textView_myorder_metric"
        android:layout_width="129dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="250ml"
        android:textColor="@color/myorder_titleproduct_black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <TextView
        android:paddingLeft="4dp"
        android:id="@+id/textView_myorder_price"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="cmimi i produktit"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView_myorder"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="232dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_myorder"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton_myorder_info"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="244dp"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_myorder"
        app:layout_constraintEnd_toEndOf="@+id/imageView_myorder"
        app:srcCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/imageButton_delete"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/imageView_myorder"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imageView_myorder"
        app:layout_constraintTop_toTopOf="@+id/imageView_myorder" />

</android.support.constraint.ConstraintLayout>
